<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/me.gensan.android.sample.samplefixedtextview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:orientation="vertical"
	android:gravity="center">

    <me.gensan.android.sample.samplefixedtextview.ui.FixedTextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/hello_world_min1"
        android:layout_margin="10dp"
        custom:fixedEllipsizeMaxLines="2" />
    
    <me.gensan.android.sample.samplefixedtextview.ui.FixedTextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/hello_world_min2"
        android:layout_margin="10dp"
        custom:fixedEllipsizeMaxLines="2" />
    
    
    <me.gensan.android.sample.samplefixedtextview.ui.FixedTextView
        android:id="@+id/fixEllipsize"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:layout_margin="10dp"
        custom:fixedEllipsizeMaxLines="10" />
    
    <me.gensan.android.sample.samplefixedtextview.ui.FixedTextView
        android:id="@+id/fixEllipsize"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:layout_margin="10dp" />

</LinearLayout>
</ScrollView>
